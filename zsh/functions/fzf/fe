# fe [FUZZY PATTERN] - Open the selected file(s) with the default editor

emulate -RL zsh

local -a files

files=(${(0)"$(fzf --multi --exit-0 --preview 'bat --color=always {}' --print0 --walker-root ${*:-.})"})

print -rs -- ${EDITOR:-vim} ${(q+)files:?"Error: No files to edit"}

${EDITOR:-vim} $files

# vim: set ft=zsh:
